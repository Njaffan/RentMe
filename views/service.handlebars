{{#if errors}} {{#each errors}}
<div class="alert alert-danger">{{msg}}</div>
{{/each}} {{/if}}

<form method="post" action="/users/service">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Name" name="name">
    </div>
    <div class="form-group">
        <label>Service</label>
        <input type="text" class="form-control" placeholder="Describe you Service" name="service">
    </div>
    <div class="form-group">
        <label>Hourly Rate</label>
        <input type="text" class="form-control" placeholder="Rate" name="price">
    </div>
    

    <div class="form-group">
        <button id="click-me" type="submit" class="btn btn-default">Submit</button>
    </div>


</form>